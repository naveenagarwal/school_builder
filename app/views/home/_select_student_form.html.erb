<%= form_tag(graph_data_path, {class: "form", remote: true}) do %>
  <% @group_ids.each do |id| %>
      <%= hidden_field_tag "group_ids[]", id %>
  <% end %>
  <fieldset>

    <%= select_tag(
        "student",
        options_from_collection_for_select(@students, "id", "name"),
        prompt: "Select Student",
        class: "selectpicker"
      )
    %>

    <%= submit_tag "Plot Graph", id: "submit", name: "submit", class: "form_submit btn align-button", disabled: false, disable_with: "Please wait..." %>

  </fieldset>
<% end %>